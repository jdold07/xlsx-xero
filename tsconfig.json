{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "lib": ["ES2023"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist/"
  },
  "types": ["node", "fs"],
  "include": ["./src/**/*"]
}
