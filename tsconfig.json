{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": false,
    "removeComments": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "baseUrl": "./"
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": ["./src/**/*"]
}
